// DO NOT MODIFY!
// This is the default configuration of Walt. If you need to make modifications
// copy this file into ~/.walt.json and/or as "walt.json" into the project's
// working directory.

{
    // Plugin specific configuration

    "plugins": {
        "javascript": {
            "enabled": true,
            "method": "uglifyjs" // Method can either be "uglifyjs" 
                                 // or "closure" (for Google Closure Compiler)
        },
        "css": {
            "enabled": true
        },
        "html": {
            "enabled": true
        }
    },

    // Array of relative paths to files or directories as seen from the source
    // directory which should be ignored for validation/minification. However these
    // files are still copied. Same as the IGNORE command line option and can be
    // used in conjunction with it.

    "ignore": [
    ]
}
